{
  "security": {
    "blocked_patterns": [
      "password\\s*=",
      "api_key\\s*=",
      "secret\\s*=",
      "token\\s*=",
      "private_key\\s*=",
      "eval\\s*\\(",
      "exec\\s*\\(",
      "shell=True",
      "innerHTML\\s*=",
      "document\\.write\\s*\\("
    ],
    "high_severity_patterns": [
      "password\\s*=",
      "api_key\\s*=",
      "secret\\s*=",
      "token\\s*=",
      "private_key\\s*="
    ]
  },
  "quality": {
    "max_function_lines": 50,
    "max_line_length": 120,
    "warn_patterns": [
      "console\\.log",
      "print\\s*\\(",
      "TODO:",
      "FIXME:",
      "HACK:",
      "XXX:"
    ],
    "ignore_patterns": [
      "#\\s*TODO:",
      "//\\s*TODO:",
      "/\\*\\s*TODO:"
    ]
  },
  "complexity": {
    "max_cyclomatic_complexity": 10,
    "max_nesting_depth": 4,
    "max_parameters": 5
  },
  "file_types": {
    "code_extensions": [".js", ".jsx", ".ts", ".tsx", ".py", ".java", ".cpp", ".c", ".go", ".rs"],
    "config_extensions": [".json", ".yaml", ".yml", ".toml", ".ini", ".xml"],
    "doc_extensions": [".md", ".rst", ".txt"]
  },
  "thresholds": {
    "test_coverage_min": 70,
    "test_coverage_recommended": 80,
    "max_lint_warnings": 5,
    "max_quality_issues": 10,
    "quality_score_pass_threshold": 80
  },
  "ignore_directories": [
    "node_modules",
    "__pycache__",
    ".git",
    "dist",
    "build",
    "target",
    "vendor",
    ".venv",
    "venv"
  ],
  "ignore_files": [
    "*.min.js",
    "*.bundle.js",
    "*.lock",
    "package-lock.json",
    "yarn.lock"
  ]
}